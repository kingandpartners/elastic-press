#!/usr/bin/env bash

TMPDIR=${TMPDIR-/tmp}
TMPDIR=$(echo $TMPDIR | sed -e "s/\/$//")
WP_TESTS_DIR=${WP_TESTS_DIR-$TMPDIR/wordpress-tests-lib}
WP_CORE_DIR=${WP_CORE_DIR-$TMPDIR/wordpress/}

# clears uploads so they don't increment
rm -rf ${WP_CORE_DIR}wp-content/uploads/*

# Run theme tests using custom phpunit config
# requires composer global install of phpunit (see readme)
# otherwise can use `./vendor/bin/phpunit`
# for local package install
phpunit -c phpunit.xml.dist
